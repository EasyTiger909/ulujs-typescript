{
  "compilerOptions": {
    "strict": true,
    "module": "ES2022",
    "allowJs": true,
    "declaration": true,
    "target": "ES2022",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true,
    "declarationDir": "dist/types"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "tests"]
}
